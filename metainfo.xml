<?xml version="1.0"?>
<metainfo>
	<schemaVersion>2.0</schemaVersion>
	<services>
		<service>
			<name>R</name>
			<displayName>R</displayName>
			<comment>The R Project for Statistical Computing</comment>
			<version>0.1.0</version>
			<quickLinksConfigurations>
				<quickLinksConfiguration>
					<fileName>quicklinks.json</fileName>
					<default>true</default>
				</quickLinksConfiguration>
			</quickLinksConfigurations>
			<components>
				<component>
					<name>R_SERVER</name>
					<displayName>R Server</displayName>
					<category>MASTER</category>
					<cardinality>1</cardinality>
					<commandScript>
						<script>scripts/ambari/master.py</script>
						<scriptType>PYTHON</scriptType>
						<timeout>5000</timeout>
					</commandScript>
				</component>
				<component>
					<name>R_CLIENT</name>
					<displayName>R Client</displayName>
					<category>CLIENT</category>
					<cardinality>1+</cardinality>
					<commandScript>
						<script>scripts/ambari/client.py</script>
						<scriptType>PYTHON</scriptType>
						<timeout>5000</timeout>
					</commandScript>
					<configFiles>
						<configFile>
							<type>xml</type>
							<fileName>r-config.xml</fileName>
							<dictionaryName>r-config</dictionaryName>
						</configFile>
					</configFiles>
				</component>
			</components>
			<osSpecifics>
				<osSpecific>
					<osFamily>redhat7</osFamily>
					<packages>
						<package>
							<name>R</name>
						</package>
					</packages>
				</osSpecific>
			</osSpecifics>
			<commandScript>
				<script>scripts/ambari/service_check.py</script>
				<scriptType>PYTHON</scriptType>
				<timeout>300</timeout>
			</commandScript>
			<configuration-dependencies>
				<config-type>r-config</config-type>
			</configuration-dependencies>
			<requiredServices>
				<service>YARN</service>
				<service>MAPREDUCE2</service>
			</requiredServices>
			<restartRequiredAfterChange>false</restartRequiredAfterChange>
		</service>
	</services>
</metainfo>
